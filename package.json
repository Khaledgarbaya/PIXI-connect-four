{
  "name": "connect-four-challenge",
  "version": "0.6.1",
  "repository": "",
  "description": "Connect four Game Using PIXI js and webpack",
  "config": {
    "buildDir": "./build",
    "stageWidth": 1024,
    "stageHeight": 768,
    "BackgroundColor" : "0x0083cd",
    "texts":{"panel_title":"CONNECT 4",
              "panel_desc":"Use your mouse to put red pieces into the board.\nYour goal is to get four of them in a row \nvertically, horizontally or diagonally.",
            "playBtn":"Let's Go"}
  },
  "scripts": {
    "prestart": "npm install",
    "start": "NODE_ENV=development webpack-dev-server --content-base ./build/ --hot --inline --host 0.0.0.0",
    "webpack": "webpack -p --config ./webpack.config.js",
    "build": "NODE_ENV=production npm run webpack",
    "prewebpack": "npm run clean",
    "clean": "rimraf $npm_package_config_buildDir && mkdir $npm_package_config_buildDir",
    "lint": "eslint ./app/**/*.js"
  },
  "dependencies": {
    "pixi.js": "^3.0.7",
    "tween.js": "^16.3.4"
  },
  "devDependencies": {
    "babel-core": "^6.7.2",
    "babel-eslint": "^5.0.0",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.6.0",
    "babel-runtime": "^6.6.1",
    "brfs": "^1.4.3",
    "eslint": "^2.4.0",
    "file-loader": "^0.8.4",
    "html-loader": "^0.4.3",
    "json-loader": "^0.5.3",
    "rimraf": "^2.4.3",
    "transform-loader": "^0.2.3",
    "webpack": "^1.12.2",
    "webpack-dev-server": "^1.11.0"
  },
  "engines": {
    "node": ">=5.0.0"
  }
}
